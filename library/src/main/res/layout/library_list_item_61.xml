<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data class=".ListItem61Custom">

    </data>
    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="100pt"
        android:layout_marginBottom="5pt"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardBackgroundColor="#ffffff"
        app:cardCornerRadius="3dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        app:contentPadding="3pt">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/bt_right"
                android:layout_width="150pt"
                android:layout_height="50pt"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="30pt"
                android:background="@drawable/library_selector_1"
                android:elevation="5pt"
                android:gravity="center"
                android:textColor="@color/common_white"
                android:textSize="30pt"
                android:translationZ="5pt"
                tools:text="解冻" />

            <TextView
                android:id="@+id/tv_upper_title"
                android:layout_width="match_parent"
                android:layout_height="45pt"
                android:layout_toLeftOf="@id/bt_right"
                android:gravity="center_vertical|left"
                android:paddingLeft="15pt"
                android:textSize="26pt"
                tools:text="姓名" />

            <TextView
                android:id="@+id/tv_down_title"
                android:layout_width="match_parent"
                android:layout_height="45pt"
                android:layout_below="@id/tv_upper_title"
                android:layout_toLeftOf="@id/bt_right"
                android:gravity="center_vertical|left"
                android:paddingLeft="15pt"
                android:textSize="26pt"
                android:autoLink="phone"
                tools:text="手机号" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>


</layout>