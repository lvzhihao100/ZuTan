<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data class=".ListItem13Custom">

    </data>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:elevation="1dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:translationZ="1dp"
        app:cardBackgroundColor="@color/common_white"
        app:cardCornerRadius="2dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        app:contentPadding="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80pt"
            android:gravity="center_vertical"
            android:paddingLeft="10pt"
            android:paddingRight="10pt"
            >

            <TextView
                android:id="@+id/tv_left_center_content"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical|left"
                tools:text="tv_left_center_content"
                android:textSize="30pt" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@id/tv_left_center_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_upper_right_content"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical|right"
                    android:lines="1"
                    tools:text="tv_upper_left_content"
                    android:textSize="22pt" />

                <TextView
                    android:id="@+id/tv_down_right_content"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical|right"
                    android:lines="1"
                    tools:text="tv_upper_right_content"
                    android:textSize="22pt" />
            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</layout>
