<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data class=".ListItem60Custom">

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/library_page_bg"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingBottom="40pt"
        android:paddingLeft="80pt"
        android:paddingRight="80pt">

        <android.support.v7.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5pt"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardBackgroundColor="#ffffff"
            app:cardCornerRadius="3dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true"
            app:contentPadding="3dp">

            <ImageView
                android:id="@+id/iv_img"
                android:layout_width="match_parent"
                android:layout_height="230pt"
                android:layout_gravity="center" />
        </android.support.v7.widget.CardView>

        <RelativeLayout
            android:id="@+id/lr_bt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/bt_preview"
                android:layout_width="120pt"
                android:layout_height="40pt"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="40pt"
                android:layout_marginRight="40pt"
                android:background="@drawable/library_selector_3"
                android:gravity="center"
                android:text="预览"
                android:textColor="@color/common_ColorPrimary"
                android:textSize="26pt" />

            <Button
                android:id="@+id/bt_edit"
                android:layout_width="100pt"
                android:layout_height="40pt"
                android:layout_toLeftOf="@id/bt_preview"
                android:background="@drawable/library_selector_3"
                android:gravity="center"
                android:text="编辑"
                android:textColor="@color/common_ColorPrimary"
                android:textSize="26pt" />

            <Button
                android:id="@+id/bt_delete"
                android:layout_width="100pt"
                android:layout_height="40pt"
                android:layout_toRightOf="@id/bt_preview"
                android:background="@drawable/library_selector_3"
                android:gravity="center"
                android:text="删除"
                android:textColor="@color/common_ColorPrimary"
                android:textSize="26pt" />
        </RelativeLayout>
    </LinearLayout>

</layout>