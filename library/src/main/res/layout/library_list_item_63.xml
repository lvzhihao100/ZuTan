<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data class=".ListItem63Custom">

    </data>

    <RelativeLayout
        android:id="@+id/wrapper_list_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/library_orange"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_poster"
            android:layout_width="match_parent"
            android:layout_height="412pt"
            android:padding="40pt"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:paddingBottom="1dp" />

        <View
            android:id="@+id/view_avatar_overlay"
            android:layout_width="match_parent"
            android:layout_height="2pt" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_poster"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
            android:fontFamily="sans-serif-thin"
            android:gravity="center_horizontal"
            android:singleLine="true"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="40pt"
            tools:text="RICHARD" />

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_name"
            android:layout_centerHorizontal="true"
            android:fontFamily="sans-serif"
            android:gravity="center_horizontal"
            android:padding="10dp"
            android:textColor="@color/common_ColorAccent"
            android:textSize="25pt"
            android:textStyle="normal" />
    </RelativeLayout>


</layout>