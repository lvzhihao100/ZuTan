<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data class=".RecyclerViewRefreshCustom" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/common_white"
        android:orientation="vertical">

        <com.shizhefei.view.coolrefreshview.CoolRefreshView
            android:id="@+id/coolRefreshView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.recyclerview.swipe.SwipeMenuRecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></com.recyclerview.swipe.SwipeMenuRecyclerView>
        </com.shizhefei.view.coolrefreshview.CoolRefreshView>
    </LinearLayout>

</layout>
