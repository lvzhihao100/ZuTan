<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data class=".ListItem15Custom">

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:elevation="1dp"
        android:orientation="vertical"
        android:translationZ="1dp">

        <RelativeLayout
            android:id="@+id/ll_root"
            android:layout_width="match_parent"
            android:layout_height="90pt"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="12pt"
            >

            <ImageView
                android:id="@+id/iv_head"
                android:layout_width="60pt"
                android:layout_height="60pt"
                android:layout_centerVertical="true"
                android:layout_marginRight="12pt"
                tools:src="@mipmap/ic_launcher"

                 />

            <ImageView
                android:id="@+id/iv_enter"
                android:layout_width="25pt"
                android:layout_height="25pt"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="8pt"
                android:scaleType="fitXY"
                android:src="@mipmap/library_arrow_right"

                 />

            <com.coorchice.library.SuperTextView
                android:id="@+id/tv_dot"
                android:layout_width="wrap_content"
                android:layout_height="25pt"
                android:layout_centerVertical="true"
                android:layout_marginRight="20pt"
                android:layout_toLeftOf="@+id/iv_enter"
                android:gravity="center"
                android:minWidth="18pt"
                android:paddingLeft="5pt"
                android:paddingRight="5pt"
                android:text="11"
                android:textColor="@color/common_white"
                android:textSize="20pt"
                android:visibility="invisible"
                app:corner="15dp"
                app:solid="#ff0000" />

            <TextView
                android:id="@+id/tv_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/tv_dot"
                android:layout_toRightOf="@id/iv_head"
                android:gravity="center_vertical|left"
                tools:text="员工档案"
                android:textSize="28pt" />
        </RelativeLayout>
    </LinearLayout>
</layout>